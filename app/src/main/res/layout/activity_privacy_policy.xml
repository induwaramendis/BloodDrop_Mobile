<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Introductory Section -->
        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We value your privacy and are committed to protecting your personal information. This Privacy Policy explains how we collect, use, and protect your data."
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingTop="20dp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Information Collection Section -->
        <TextView
            android:id="@+id/tv_info_collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Information Collection"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_info_collection_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We may collect information such as your name, contact details, and location to connect you with blood donation opportunities."
            android:textColor="#333333"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Data Usage Section -->
        <TextView
            android:id="@+id/tv_data_usage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Data Usage"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_data_usage_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We use the information to connect donors with recipients, send notifications, and improve user experience within the app."
            android:textColor="#333333"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Data Sharing Section -->
        <TextView
            android:id="@+id/tv_data_sharing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Data Sharing"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_data_sharing_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We do not share your information with third parties without your consent, except as required by law."
            android:textColor="#333333"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />
        <!-- Data Security Section -->
        <TextView
            android:id="@+id/tv_data_security_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Data Security"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_data_security_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We take appropriate measures to protect your data from unauthorized access, alteration, and disclosure."
            android:textColor="#333333"
            android:textSize="17sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />




    </LinearLayout>
</ScrollView>